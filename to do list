    def add_it(self):
        item = self.to_do_lineEdit.text()
        self.to_do_listView.addItem(item)
        self.to_do_lineEdit.setText("")
        if item == "":
            ValueError("Input Text")
            

    def delete_it(self):
        clicked = self.to_do_listView.currentRow()
        self.to_do_listView.takeItem(clicked)
    
